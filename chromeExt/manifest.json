{
  "name": "Bug Tracker",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Lets you track client side click issues",
  "background": {
      "scripts": ["js/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*","https://*/*","http://localhost:8080/*"],
    "css": ["css/jquery-ui.css", "css/play.css", "css/playlist.css"],
    "js": ["js/lib/jquery.min.js", "js/lib/jquery-ui.js" ,"js/clickCollector.js","js/playback.js", "js/content-scripts.js"],
    "run_at": "document_idle"
  }],

  "browser_action": {
    "default_icon": "images/appd.png",
    "default_popup": "playlistView.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "debugger",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "webNavigation",
    "http://*.localhost:3000/*"

  ]
}
